<!-- Hero Section -->
<section class="hero-section position-relative overflow-hidden">
  <div class="container position-relative z-3">
    <div class="row justify-content-center py-8 py-lg-10">
      <div class="col-lg-8 text-center">
        <h1 class="display-3 fw-bold mb-4 text-gradient">Welcome To SkillFundr</h1>
        <p class="fs-5 mb-6 mx-auto" style="max-width: 700px">
          An AI mentor platform breaking goals into milestones
        </p>
        <div class="d-flex justify-content-center gap-3">
          <%= link_to "Explore Courses", skills_path, class: "btn btn-primary btn-lg px-5 py-3" %>
          <% unless user_signed_in? %>
            <%= link_to "Join Now", new_user_registration_path, class: "btn btn-outline-light btn-lg px-5 py-3" %>
          <% else %>
            <%= link_to "Dashboard",  dashboard_path, class: "btn btn-outline-light btn-lg px-5 py-3" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Animated Background Elements -->
  <div class="hero-shape-1"></div>
  <div class="hero-shape-2"></div>
  <div class="hero-shape-3"></div>
  <div class="hero-particles"></div>
</section>

<!-- Featured Courses -->
<section class="py-6 py-lg-8 bg-white">
  <div class="container">
    <div class="row justify-content-center mb-5">
      <div class="col-lg-8 text-center">
        <h2 class="display-5 fw-bold mb-3 text-dark">Browse Courses</h2>
        <p class="text-muted fs-5">
          Start your journey with our most popular learning paths
        </p>
      </div>
    </div>

    <div class="row g-4">
      <% if @featured_skills.any? %>
        <% @featured_skills.each do |skill| %>
          <div class="col-md-6 col-lg-4">
            <div class="course-card card border-0 shadow-sm h-100 overflow-hidden">
              <div class="card-body p-4">
                <h3 class="h4 mb-3 text-dark"><%= skill.name %></h3>
                <p class="card-text text-muted mb-4"><%= skill.description.to_s.truncate(120) %></p>
                <div class="d-flex justify-content-between align-items-center mt-auto">
                  <span class="badge rounded-pill px-3 py-2" style="background-color: #e0eeff; color: #16205E;">
                    <%= skill.difficulty&.capitalize || "N/A" %>
                  </span>
                  <span class="text-muted">8 weeks</span>
                </div>
              </div>
              <div class="card-footer bg-transparent border-0 p-4 pt-0">
                <%= link_to "Start Learning", skill_path(skill), class: "btn btn-outline-primary w-100", style: "color: #188BD2; border-color: #188BD2;" %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <!-- Fallback static courses -->
        <% [
          { name: "Full-stack Web Development", desc: "Learn both front-end and back-end development to become a full-stack developer." },
          { name: "Data Science", desc: "Master Python, SQL, and machine learning to analyze and interpret complex data." },
          { name: "Mobile App Development", desc: "Build native and cross-platform mobile applications for iOS and Android." }
        ].each do |course| %>
          <div class="col-md-6 col-lg-4">
            <div class="course-card card border-0 shadow-sm h-100">
              <div class="card-body p-4">
                <h3 class="h4 mb-3 text-dark"><%= course[:name] %></h3>
                <p class="card-text text-muted mb-4"><%= course[:desc] %></p>
                <div class="d-flex justify-content-between align-items-center mt-auto">
                  <span class="badge rounded-pill px-3 py-2" style="background-color: #e0eeff; color: #16205E;">
                    Beginner
                  </span>
                  <span class="text-muted">8 weeks</span>
                </div>
              </div>
              <div class="card-footer bg-transparent border-0 p-4 pt-0">
                <a href="#" class="btn btn-outline-primary w-100" style="color: #188BD2; border-color: #188BD2;">Start Learning</a>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>

